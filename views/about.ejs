<%- include('partials/header', { title }) %>

<div class="container py-5">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <i class="fas fa-info-circle fa-4x text-primary mb-3"></i>
        <h1 class="display-4 mb-3">About EJS Demo</h1>
        <p class="lead text-muted">
            A comprehensive demonstration of deployment-ready web application architecture
        </p>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow border-0 mb-5">
                <div class="card-body p-5">
                    <h2 class="h3 mb-4">
                        <i class="fas fa-rocket text-primary me-2"></i>
                        Our Mission
                    </h2>
                    <p class="mb-4">
                        This EJS Demo project showcases modern web development practices and deployment strategies. 
                        Built with <strong>Node.js</strong>, <strong>Express.js</strong>, and <strong>MongoDB</strong>, 
                        it demonstrates how to create a scalable, maintainable web application that's ready for production deployment.
                    </p>
                    
                    <h3 class="h4 mb-3">
                        <i class="fas fa-bullseye text-success me-2"></i>
                        What We Demonstrate
                    </h3>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <strong>Full-Stack Architecture:</strong> Complete CRUD operations with proper separation of concerns
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <strong>Security Best Practices:</strong> Password hashing, session management, and input validation
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <strong>Responsive Design:</strong> Mobile-first approach with Bootstrap 5
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <strong>Database Integration:</strong> MongoDB with Mongoose ODM for robust data management
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <strong>Deployment Ready:</strong> Docker containerization and environment configuration
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Technology Stack -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="fas fa-cogs text-primary me-2"></i>
                Technology Stack
            </h2>
        </div>
    </div>
    
    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-4">
                    <i class="fab fa-node-js fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Node.js</h5>
                    <p class="card-text text-muted">Runtime environment for server-side JavaScript execution</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-4">
                    <i class="fas fa-server fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Express.js</h5>
                    <p class="card-text text-muted">Fast, unopinionated web framework for Node.js applications</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-4">
                    <i class="fas fa-database fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">MongoDB</h5>
                    <p class="card-text text-muted">NoSQL database for flexible, scalable data storage</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm text-center h-100">
                <div class="card-body p-4">
                    <i class="fas fa-eye fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">EJS</h5>
                    <p class="card-text text-muted">Embedded JavaScript templating for dynamic content</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Features -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <h4 class="card-title">
                        <i class="fas fa-features text-primary me-2"></i>
                        Key Features
                    </h4>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2">
                            <i class="fas fa-user-shield text-success me-2"></i>
                            User authentication and authorization
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-blog text-info me-2"></i>
                            Blog post creation and management
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-search text-warning me-2"></i>
                            Full-text search functionality
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-heart text-danger me-2"></i>
                            Like and engagement system
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-tags text-secondary me-2"></i>
                            Tagging and categorization
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-mobile-alt text-purple me-2"></i>
                            Fully responsive design
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <h4 class="card-title">
                        <i class="fas fa-deployment-unit text-primary me-2"></i>
                        Deployment Ready
                    </h4>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2">
                            <i class="fab fa-docker text-info me-2"></i>
                            Docker containerization support
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-cog text-secondary me-2"></i>
                            Environment-based configuration
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-shield-alt text-success me-2"></i>
                            Security headers and CORS protection
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-compress text-warning me-2"></i>
                            Production-optimized builds
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-database text-primary me-2"></i>
                            Database connection pooling
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-tachometer-alt text-danger me-2"></i>
                            Performance monitoring ready
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-5">
        <div class="card bg-primary text-white border-0 shadow">
            <div class="card-body p-5">
                <h3 class="mb-3">Ready to Get Started?</h3>
                <p class="mb-4">
                    Explore the codebase, create posts, and see how modern web applications are built and deployed.
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <% if (!user) { %>
                        <a href="/users/register" class="btn btn-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Join the Community
                        </a>
                    <% } %>
                    <a href="/posts" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-blog me-2"></i>Browse Posts
                    </a>
                    <a href="/contact" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-envelope me-2"></i>Get in Touch
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
