<%- include('partials/header', { title }) %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="error-container">
                <div class="error-number mb-4">
                    <h1 class="display-1 text-primary fw-bold">404</h1>
                </div>
                
                <div class="error-icon mb-4">
                    <i class="fas fa-search fa-4x text-muted"></i>
                </div>
                
                <h2 class="h3 mb-3">Page Not Found</h2>
                <p class="text-muted mb-4">
                    Sorry, the page you are looking for doesn't exist or has been moved. 
                    Let's get you back on track!
                </p>
                
                <div class="d-flex justify-content-center gap-3 flex-wrap mb-5">
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <a href="/posts" class="btn btn-outline-primary">
                        <i class="fas fa-blog me-2"></i>Browse Posts
                    </a>
                    <button class="btn btn-outline-secondary" onclick="history.back()">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </button>
                </div>
                
                <!-- Search suggestion -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="card-title">
                            <i class="fas fa-lightbulb text-warning me-2"></i>
                            Try Searching Instead
                        </h5>
                        <p class="card-text text-muted mb-3">
                            Maybe we can help you find what you're looking for
                        </p>
                        <form action="/search" method="GET" class="d-flex">
                            <input type="text" 
                                   name="q" 
                                   class="form-control me-2" 
                                   placeholder="Search posts, topics..."
                                   required>
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Popular Posts -->
    <div class="row mt-5">
        <div class="col-12">
            <h4 class="text-center mb-4">
                <i class="fas fa-fire text-danger me-2"></i>
                Popular Content
            </h4>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-home fa-2x text-primary mb-2"></i>
                    <h6 class="card-title">Homepage</h6>
                    <p class="card-text small text-muted">Start your journey here</p>
                    <a href="/" class="btn btn-sm btn-outline-primary">Visit</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-blog fa-2x text-success mb-2"></i>
                    <h6 class="card-title">All Posts</h6>
                    <p class="card-text small text-muted">Browse community content</p>
                    <a href="/posts" class="btn btn-sm btn-outline-success">Browse</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-info-circle fa-2x text-info mb-2"></i>
                    <h6 class="card-title">About</h6>
                    <p class="card-text small text-muted">Learn more about us</p>
                    <a href="/about" class="btn btn-sm btn-outline-info">Learn</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-container {
    animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.error-number {
    position: relative;
}

.error-number::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #dee2e6, transparent);
}
</style>

<%- include('partials/footer') %>
