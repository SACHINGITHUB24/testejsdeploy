<%- include('../partials/header', { title }) %>

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow border-0">
                <div class="card-body text-center p-4">
                    <img src="<%= profile.avatar %>" 
                         alt="<%= profile.username %>" 
                         class="rounded-circle mb-3" 
                         width="120" height="120">
                    <h4 class="mb-1"><%= profile.username %></h4>
                    <p class="text-muted mb-3"><%= profile.email %></p>
                    
                    <% if (profile.bio) { %>
                        <p class="mb-3"><%= profile.bio %></p>
                    <% } %>
                    
                    <div class="d-flex justify-content-around text-center">
                        <div>
                            <h6 class="mb-0">Role</h6>
                            <small class="text-muted text-capitalize"><%= profile.role %></small>
                        </div>
                        <div>
                            <h6 class="mb-0">Joined</h6>
                            <small class="text-muted">
                                <%= new Date(profile.createdAt).toLocaleDateString() %>
                            </small>
                        </div>
                    </div>
                    
                    <button class="btn btn-primary btn-sm mt-3" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                        <i class="fas fa-edit me-1"></i>Edit Profile
                    </button>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>Account Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="border rounded p-3">
                                <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
                                <h4 class="mb-1">0</h4>
                                <p class="text-muted mb-0">Posts Created</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border rounded p-3">
                                <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                                <h4 class="mb-1">0</h4>
                                <p class="text-muted mb-0">Likes Received</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border rounded p-3">
                                <i class="fas fa-eye fa-2x text-success mb-2"></i>
                                <h4 class="mb-1">0</h4>
                                <p class="text-muted mb-0">Total Views</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow border-0 mt-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-blog me-2"></i>Recent Posts
                    </h5>
                    <a href="/posts/create" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus me-1"></i>New Post
                    </a>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No posts yet</h6>
                        <p class="text-muted">Start sharing your thoughts with the community!</p>
                        <a href="/posts/create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Create First Post
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit me-2"></i>Edit Profile
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/users/profile" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="avatar" class="form-label">Avatar URL</label>
                        <input type="url" class="form-control" id="avatar" name="avatar" 
                               value="<%= profile.avatar %>" 
                               placeholder="https://example.com/avatar.jpg">
                    </div>
                    
                    <div class="mb-3">
                        <label for="bio" class="form-label">Bio</label>
                        <textarea class="form-control" id="bio" name="bio" rows="3" 
                                  maxlength="200" placeholder="Tell us about yourself..."><%= profile.bio %></textarea>
                        <div class="form-text">Maximum 200 characters</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
