<%- include('partials/header', { title }) %>

<!-- Hero Section -->
<div class="hero-section bg-gradient text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4">
                    <i class="fas fa-rocket me-3"></i>
                    Welcome to EJS Demo
                </h1>
                <p class="lead mb-4">
                    A complete Node.js web application showcasing deployment-ready architecture 
                    with Express, EJS templating, and MongoDB integration.
                </p>
                <div class="d-flex flex-wrap gap-3">
                    <a href="/posts" class="btn btn-light btn-lg">
                        <i class="fas fa-blog me-2"></i>Explore Posts
                    </a>
                    <% if (!user) { %>
                        <a href="/users/register" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Get Started
                        </a>
                    <% } else { %>
                        <a href="/posts/create" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-plus me-2"></i>Create Post
                        </a>
                    <% } %>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <div class="hero-stats">
                    <div class="stat-card bg-white text-dark rounded-3 p-4 mb-3">
                        <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
                        <h3 class="mb-1"><%= stats.totalPosts %></h3>
                        <p class="mb-0">Total Posts</p>
                    </div>
                    <div class="stat-card bg-white text-dark rounded-3 p-4">
                        <i class="fas fa-users fa-2x text-success mb-2"></i>
                        <h3 class="mb-1"><%= stats.totalUsers %></h3>
                        <p class="mb-0">Active Users</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Posts Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0">
                        <i class="fas fa-clock text-primary me-2"></i>
                        Recent Posts
                    </h2>
                    <a href="/posts" class="btn btn-outline-primary">
                        View All <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <% if (posts && posts.length > 0) { %>
            <div class="row g-4">
                <% posts.slice(0, 6).forEach(post => { %>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm border-0 hover-card">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <img src="<%= post.author.avatar %>" 
                                         alt="<%= post.author.username %>" 
                                         class="rounded-circle me-2" 
                                         width="32" height="32">
                                    <small class="text-muted">
                                        By <%= post.author.username %>
                                    </small>
                                </div>
                                
                                <h5 class="card-title">
                                    <a href="/posts/<%= post._id %>" class="text-decoration-none">
                                        <%= post.title %>
                                    </a>
                                </h5>
                                
                                <p class="card-text text-muted">
                                    <%= post.content.substring(0, 120) %>
                                    <% if (post.content.length > 120) { %>...
                                    <% } %>
                                </p>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        <i class="fas fa-eye me-1"></i>
                                        <%= post.views %> views
                                    </div>
                                    <div class="text-muted small">
                                        <i class="fas fa-calendar me-1"></i>
                                        <%= new Date(post.createdAt).toLocaleDateString() %>
                                    </div>
                                </div>
                                
                                <% if (post.tags && post.tags.length > 0) { %>
                                    <div class="mt-3">
                                        <% post.tags.slice(0, 3).forEach(tag => { %>
                                            <span class="badge bg-secondary me-1">
                                                <%= tag %>
                                            </span>
                                        <% }); %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-file-alt fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No posts available yet</h4>
                <p class="text-muted">Be the first to create a post!</p>
                <% if (user) { %>
                    <a href="/posts/create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create First Post
                    </a>
                <% } else { %>
                    <a href="/users/register" class="btn btn-primary">
                        <i class="fas fa-user-plus me-2"></i>Register to Post
                    </a>
                <% } %>
            </div>
        <% } %>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2>
                <i class="fas fa-star text-warning me-2"></i>
                Key Features
            </h2>
            <p class="text-muted">Built with modern web development best practices</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 text-center">
                <div class="feature-card p-4">
                    <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
                    <h5>Responsive Design</h5>
                    <p class="text-muted">Fully responsive layout that works on all devices</p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 text-center">
                <div class="feature-card p-4">
                    <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                    <h5>Secure Authentication</h5>
                    <p class="text-muted">Bcrypt password hashing and secure session management</p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 text-center">
                <div class="feature-card p-4">
                    <i class="fas fa-database fa-3x text-info mb-3"></i>
                    <h5>MongoDB Integration</h5>
                    <p class="text-muted">Robust database operations with Mongoose ODM</p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 text-center">
                <div class="feature-card p-4">
                    <i class="fas fa-search fa-3x text-warning mb-3"></i>
                    <h5>Full-Text Search</h5>
                    <p class="text-muted">Advanced search functionality across posts</p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 text-center">
                <div class="feature-card p-4">
                    <i class="fas fa-rocket fa-3x text-danger mb-3"></i>
                    <h5>Production Ready</h5>
                    <p class="text-muted">Optimized for deployment with Docker support</p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 text-center">
                <div class="feature-card p-4">
                    <i class="fas fa-code fa-3x text-purple mb-3"></i>
                    <h5>Clean Code</h5>
                    <p class="text-muted">Well-structured, maintainable codebase</p>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
